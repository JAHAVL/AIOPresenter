{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", 
    "lib": ["dom", "ES2020"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", 
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, 
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["./*"],
      "@main/*": ["main/*"],
      "@renderer/*": ["renderer/*"],
      "@components/*": ["renderer/components/*"],
      "@utils/*": ["utils/*"],
      "@react-icons/*": ["node_modules/react-icons/*"],
      "@PresentationWidgetMocks/*": ["renderer/widgets/PresentationWidget/data/mockData/*"],
      "@customTypes/*": ["renderer/types/*"],
      "@shared/*": ["shared/*"]
    },
    "allowJs": true,
    "types": ["node"] 
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
